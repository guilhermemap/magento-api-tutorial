<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/rest_dev/getProduct/:id" method="GET">

        <service class="Exemplo\RestApi\Api\ProductRepositoryInterface" method="getItem" />

        <resources>

            <resource ref="Exemplo_RestApi::products_get" />

        </resources>

    </route>

    <route url="/V1/rest_dev/setDescription" method="PUT">

        <service class="Exemplo\RestApi\Api\ProductRepositoryInterface" method="setDescription" />

        <resources>

            <resource ref="Exemplo_RestApi::products_set_description" />

        </resources>

    </route>

</routes>
